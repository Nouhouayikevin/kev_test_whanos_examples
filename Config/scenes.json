{
  "scenes": [
    {
      "scene_id": "test_game_scene",
      "registry_group": "gameplay",
      "initial_level": "Config/levels/level_1.json",
      
      "lifecycle": {
        "on_init": [
          {
            "action": "log",
            "message": "Initializing TestGameScene..."
          },
          {
            "action": "set_scripting_group",
            "group": "gameplay"
          }
        ],
        "on_exit": [
          {
            "action": "log",
            "message": "Exiting TestGameScene"
          },
          {
            "action": "cleanup_registry",
            "group": "gameplay"
          }
        ]
      },
      
      "system_groups": [
        {
          "name": "update",
          "frequency": 60.0,
          "threaded": true,
          "systems": [
            "PlayerControlSystem",
            "PlayerShootingSystem",
            "AISystem",
            "EnemyShootingSystem",
            "WeaponSystem",
            "PowerUpSystem",
            "LifespanSystem",
            "DeathSystem",
            "SaveLoadSystem",
            "MovementSystem",
            "CollisionSystem",
            "OffScreenDeathSystem",
            "ForceInitSystem",
            "ForceSystem",
            "ForceControlSystem",
            "ForceCollisionSystem",
            "SoundSystem",
            "MusicSystem"
          ]
        },
        {
          "name": "script",
          "frequency": 60.0,
          "threaded": true,
          "systems": [
            "ScriptSystem"
          ]
        },
        {
          "name": "render",
          "frequency": 60.0,
          "threaded": false,
          "systems": [
            "AnimationSystem",
            "ParallaxSystem",
            "HealthBarSystem",
            "RenderSystem"
          ]
        }
      ]
    }
  ]
}
